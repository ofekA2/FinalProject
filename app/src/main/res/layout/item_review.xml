<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivAuthorPhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/tvAuthorName"
                style="@style/TextAppearance.Reviewaurant.Body"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vera" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvRating"
                style="@style/TextAppearance.Reviewaurant.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 9.2 / 10" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvRestaurant"
            style="@style/TextAppearance.Reviewaurant.Headline"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taizu" />

        <TextView
            android:id="@+id/tvDetails"
            style="@style/TextAppearance.Reviewaurant.Body"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tel Aviv • Fusion" />

        <TextView
            android:id="@+id/tvPriceTier"
            style="@style/TextAppearance.Reviewaurant.Body"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$$$$" />

        <View
            android:id="@+id/divider"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvReviewText"
            style="@style/TextAppearance.Reviewaurant.Body"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amazing seafood, try the ceviche!" />

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvTimestamp"
            style="@style/TextAppearance.Reviewaurant.Body"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09 Jul 2025, 21:00" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>